        "chokidar": "^3.5.3",
        "cloudinary": "^1.35.0",
        "concurrently": "^8.2.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "datauri": "^4.1.0",
        "dotenv": "^16.0.1",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "express": "^4.18.1",
        "express-async-handler": "^1.2.0",
        "fs": "^0.0.1-security",
        "http-status": "^1.7.3",
