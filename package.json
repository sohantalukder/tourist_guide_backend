{
    "name": "tourist-guide",
    "version": "1.0.0",
    "description": "Tourist Guide Travel Platform",
    "main": "build/src/server.js",
    "type": "module",
    "scripts": {
        "start:dev": "concurrently \"npm run watch-compile\" \"npm run dev\"",
        "watch-compile": "swc src -w --out-dir build --source-maps inline",
        "dev": "nodemon --watch \"build/**/*\" -e js --exec",
        "build": "npm run check && rimraf ./build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --ext .ts src --fix"
    },
